<!-- placed at end so pages load faster -->
<script>
function checkErr() {

    $.ajax({
        url: '/foobar',
        type: 'POST',
        cache: false,
        data: {},
        success: function(data) {
            alert('\nSuccess!\n');
            window.location = "/";
        },
        error: function (jqXHR, textStatus, err) {
            alert('\ntext status: ' + textStatus + ', err: ' + err);
        }
    });
    return true;
}

/* Switch between Dispersal and No Dispersal */
var $showD1 = $('#showD1');
var $showD2 = $('#showD2');
