$(function() {

    $showD1.click(function() {
        document.getElementById('showIfD1').value = "100,000 Ha";
    });

    $showD2.click(function() {
        document.getElementById('showIfD2').value = "143,000 Ha";
    });

    $showD3.click(function() {
        document.getElementById('showIfD3').value = "12%";
    });

    $showD4.click(function() {
        document.getElementById('showIfD4').value = "North America";
    });

    $showD5.click(function() {
        document.getElementById('showIfD5').value = "You clicked Dispersal";
    });
})
